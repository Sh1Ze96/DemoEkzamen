<Page x:Class="ToursApp.loginpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToursApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginpage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин:"></TextBlock>
                <TextBox Name="Login" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="Password"  Text="Пароль:"></TextBlock>
                <PasswordBox Name="passwordBox" Width="141"></PasswordBox>
            </StackPanel>
            <Button Name="BtnLogin" Click="BtnLogin_Click" Content="Войти" HorizontalAlignment="Right"></Button>
        </StackPanel>
    </Grid>
</Page>
